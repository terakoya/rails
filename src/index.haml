!!! 5
%html(lang="ja")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes")
    %title= "Rails寺子屋"
    %link(href="src/assets/bootstrap/css/bootstrap.css" rel="stylesheet")
    %link(href="src/assets/fontawesome/css/font-awesome.css" rel="stylesheet")
    %link(href="style.css" rel="stylesheet")
    %meta(property="og:type"        content="website" )
    %meta(property="og:url"         content="http://rails.terakoya.io/" )
    %meta(property="og:title"       content="Rails寺子屋" )
    %meta(property="og:site_name"   content="Rails寺子屋"  )
    %meta(property="og:description" content="Rails寺子屋はWebアプリを作るための強力なツール&quot;Ruby on Rails&quot;を使ってWebアプリ作りを実践しながら学ぶイベントです。"  )
